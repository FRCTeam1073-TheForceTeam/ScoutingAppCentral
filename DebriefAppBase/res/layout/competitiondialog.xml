<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:isScrollContainer="true" 
    android:background="@color/black">
    
    <!-- Begin CompetitionName field text label and entry field -->
    <TextView
        android:id="@+id/CompetitionSeasonLabel"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical|right"
        android:text="Competition Season:" />

    <EditText
        android:id="@+id/CompetitionSeasonEntry"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/CompetitionSeasonLabel"
        android:textColor="@color/black"
        android:background="@android:drawable/editbox_background" />
    <!-- End CompetitionSeason field text label and entry field -->

    <TextView
        android:id="@+id/CompetitionNameLabel"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/CompetitionSeasonLabel"
        android:textColor="@color/white"
        android:gravity="center_vertical|right"
        android:text="Competition Name:" />

    <EditText
        android:id="@+id/CompetitionNameEntry"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/CompetitionSeasonLabel"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/CompetitionNameLabel"
        android:background="@android:drawable/editbox_background" />
    <!-- End CompetitionName field text label and entry field -->

    <Button
        android:id="@+id/CompOkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CompetitionNameLabel"
        android:layout_centerHorizontal="true"
        android:text="Ok"/>

</RelativeLayout>
